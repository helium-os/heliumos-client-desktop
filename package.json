{
    "name": "heliumos-client-desktop",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "electron-start": "cross-env NODE_ENV=121212j electron . --icon=favicon.ico ",
        "dist": "cross-env NODE_ENV=windows electron-builder --win --x64",
        "dist-mac": "electron-builder --mac --x64",
        "dist-macArm": "electron-builder --mac --arm64",
        "dist-linux": "electron-builder --linux  --x64",
        "version": "echo $npm_package_version > version",
        "version-win": "echo $npm_package_version "
    },
    "dependencies": {
        "@electron-forge/cli": "^6.0.5",
        "ali-oss": "^6.17.1",
        "asar": "^3.2.0",
        "cross-env": "^7.0.3",
        "crypto": "^1.0.1",
        "crypto-js": "^4.1.1",
        "electron-fetch": "^1.9.1",
        "electron-json-storage": "^4.5.0",
        "electron-updater": "^5.3.0",
        "getmac": "^5.20.0",
        "node-forge": "^1.3.1"
    },
    "build": {
        "appId": "com.xxx.app",
        "extraResources": [
            {
                "from": "heliumos.crt",
                "to": "heliumos.crt"
            }
        ],
        "nsis": {
            "perMachine": false
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "zip"
            ]
        }
    },
    "devDependencies": {
        "electron": "^23.0.0",
        "electron-builder": "^23.6.0"
    },
    "win": {
        "icon": "favicon.ico"
    },
    "homepage": "."
}
