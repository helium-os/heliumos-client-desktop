{
    "name": "Helium-OS",
    "version": "1.0.9-demo",
    "main": "main.js",
    "scripts": {
        "electron-start": "cross-env NODE_ENV=testinner electron . --icon=favicon.ico ",
        "dist": "cross-env NODE_ENV=demo electron-builder --win --x64",
        "dist-mac": "electron-builder NODE_ENV=demo --mac --x64",
        "dist-macArm": "electron-builder NODE_ENV=demo --mac --arm64",
        "dist-linux": "electron-builder NODE_ENV=demo --linux  --x64",
        "release": "electron-builder --win --config --publish always",
        "version": "echo $npm_package_version > version",
        "version-win": "echo $npm_package_version "
    },
    "dependencies": {
        "@electron-forge/cli": "^6.0.5",
        "ali-oss": "^6.17.1",
        "asar": "^3.2.0",
        "cross-env": "^7.0.3",
        "crypto": "^1.0.1",
        "crypto-js": "^4.1.1",
        "electron-fetch": "^1.9.1",
        "electron-json-storage": "^4.5.0",
        "electron-updater": "^5.3.0",
        "getmac": "^5.20.0",
        "log4js": "^6.9.1",
        "node-forge": "^1.3.1",
        "node-schedule": "^2.1.1",
        "request": "^2.88.2",
        "split": "^1.0.1",
        "sqlite3": "^5.1.6"
    },
    "build": {
        "appId": "com.xxx.app",
        "productName": "Helium OS",
        "extraResources": [
            {
                "from": "heliumos.crt",
                "to": "heliumos.crt"
            }
        ],
        "nsis": {
            "perMachine": false
        },
        "publish": [
            {
                "provider": "github",
                "owner": "helium-os",
                "repo": "heliumos-client-desktop",
                "releaseType": "release"
            }
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "zip"
            ]
        }
    },
    "devDependencies": {
        "electron": "^23.0.0",
        "electron-builder": "^23.6.0"
    },
    "win": {
        "icon": "favicon.ico"
    },
    "homepage": "."
}
